{
  "name": "@apps/server",
  "private": true,
  "version": "1.0.0",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "NODE_ENV=development nest start --watch --debug",
    "prisma:watch": "prisma generate --watch",
    "prisma:generate": "prisma generate",
    "prisma:seed": "rimraf prisma/dev.db && npm run prisma:push && prisma db seed",
    "prisma:push": "prisma db push --force-reset --accept-data-loss"
  },
  "dependencies": {
    "@nestjs/apollo": "10.1.3",
    "@nestjs/common": "9.1.6",
    "@nestjs/core": "9.1.6",
    "@nestjs/graphql": "10.1.3",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "9.1.6",
    "@nestjs/platform-socket.io": "^9.2.1",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/websockets": "^9.2.1",
    "@prisma/client": "4.5.0",
    "apollo-server-express": "3.10.3",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.13.2",
    "express-session": "^1.17.3",
    "graphql": "16.5.0",
    "graphql-tools": "8.3.6",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "@apps/shared": "*"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.11",
    "prisma": "^4.4.0",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0"
  }
}
