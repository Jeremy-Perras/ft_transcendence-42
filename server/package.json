{
  "name": "@apps/server",
  "private": true,
  "version": "1.0.0",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build:prisma": "prisma migrate deploy",
    "generate:prisma": "prisma generate",
    "dev:seed": "prisma db execute --file ./prisma/drop.sql 2>/dev/null; prisma db push --force-reset --accept-data-loss && prisma db seed",
    "dev:studio": "prisma studio",
    "dev:server": "nest start --watch --debug --tsc",
    "build:server": "rm -rf dist &&  xstate typegen './src/**/*.machine.ts' && nest build",
    "start": "NODE_ENV=\"production\" node dist/main.js",
    "test:e2e": "jest",
    "test:coverage": "jest --coverage --collectCoverageFrom=\"./src/**\""
  },
  "dependencies": {
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/graphql": "^10.1.7",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-socket.io": "^9.2.1",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/testing": "^9.2.1",
    "@nestjs/websockets": "^9.2.1",
    "@prisma/client": "^4.7.1",
    "@types/jest": "^29.2.4",
    "@types/supertest": "^2.0.12",
    "@xstate/cli": "^0.4.2",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dataloader": "^2.1.0",
    "eslint-plugin-jest": "^27.1.6",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "graphql-tools": "^8.3.14",
    "jest": "^29.3.1",
    "memorystore": "^1.6.7",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.6.1",
    "qrcode": "^1.5.1",
    "reflect-metadata": "0.1.13",
    "remove": "^0.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "xstate": "^4.35.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.14",
    "@types/passport": "^1.0.11",
    "@types/passport-oauth2": "^1.4.11",
    "canvas": "^2.10.2",
    "prisma": "^4.7.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.1"
  },
  "jest": {
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "astTransformers": {
            "before": [
              "./test/astTransformers.js"
            ]
          }
        }
      ]
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/../src/$1"
    }
  }
}
